{

// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
"version": "2.0.0",
"tasks": [
    {
        "label": "Export Space Engineers script",
        "type": "shell",
        "command": "scripts\\export.bat",
        "args": [
            "${fileWorkspaceFolder}\\${relativeFileDirname}"
        ],
        "problemMatcher": []
    },
    {
        "label": "Create Space Engineers script",
        "type": "shell",
        "command": "scripts\\create.bat",
        "args": [
            "${input:dirname}"
        ],
        "problemMatcher": []
    }
],
"inputs": [
    {
        "id": "dirname",
        "type": "promptString",
        "description": "The name of the dir and script to create"
    }
]

}